{% extends 'base.html.twig' %}

{% block title %}Inscription - lebongroin{% endblock %}

{% block body %}
    <h3>Inscription</h3>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {
            label: 'Pseudo'
        }) }}
        {{ form_row(registrationForm.email, {
            label: 'Adresse email'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn" style="background-color: orange; color: white; font-weight: bold;">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
