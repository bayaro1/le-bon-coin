{% extends "layout/default.html.twig" %}

{% block title %}Création de compte - lebongroin{% endblock %}

{% block navbar %}
    {% include "security/_register.navbar.html.twig" %}
{% endblock %}

{% block content %}
    <div style="border-color: white; border-style: solid; border-width: 1px; border-radius: 10px; box-shadow: 3px 1px 6px 2px grey; width: 420px; padding: 30px; margin: auto; margin-top: 50px;">

        <h5 class="mt-2">Créez un compte</h5>

        <p style="font-size: 0.8em;">Bénéficiez d'une expérience personnalisée avec du contenu en lien avec votre activité et vos centres d'intérêt sur notre service</p>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username, {
                label: 'Pseudo'
            }) }}
            {{ form_row(registrationForm.email, {
                label: 'Adresse email'
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.passwordConfirm, {
                label: 'Confirmer le mot de passe'
            }) }}

            {{ form_row(registrationForm.agreeTerms, {
                label: 'Accepter les termes'
            }) }}
            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn" style="background-color: blue; color: white; font-weight: bold;">S'inscrire</button>
            </div>
        {{ form_end(registrationForm) }}

    </div>
{% endblock %}
