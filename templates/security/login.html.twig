{% extends "layout/default.html.twig" %}

{% block title %}Se connecter - lebongroin{% endblock %}

{% block navbar %}
    {% include "security/_login_navbar.html.twig" %}
{% endblock %}

{% block content %}


<div style="border-color: white; border-style: solid; border-width: 1px; border-radius: 10px; box-shadow: 3px 1px 6px 2px grey; width: 420px; padding: 30px; margin: auto; margin-top: 50px;">


    <h5 class="mt-4" style="text-align: center;">Bonjour !</h5>

    <p style="text-align: center; font-size: 0.8em;">Connectez-vous pour découvrir toutes nos fonctionnalités.</p>

    {% if error %}
        <div class="alert alert-danger">Identifiants invalides !</div>
    {% endif %}

    <br>

    <form class="form" action="{{ path('security_login') }}" method="post">

        <div class="form-group mb-4">
            <label for="_username" class="form-label">E-mail</label>
            <input type="text" class="form-control" id="_username" name="_username" value="{{ last_username }}">
        </div>

        <div class="form-group mt-4">
            <label for="_password" class="form-label">Mot de passe</label>
            <input type="password" class="form-control" id="_password" name="_password">
        </div>

        <div class="mb-4"><a style="text-decoration: none; font-size: 0.8em;" href="">Mot de passe oublié</a></div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}
        <div class="d-grid gap-2 mt-4">
            <button type="submit" class="btn mt-3" style="background-color: blue; color: white; font-weight: bold;">Se connecter</button>
        </div>

        <div style="font-size: 0.8em; text-align: center;" class="mt-4">Envie de nous rejoindre ?<a class="ms-2" style="text-decoration: none;" href="{{ path('security_register') }}">Créer un compte</a></div>


    </form>
</div>

   
